<%- include("partials/header"); -%>

<div class="flex flex-col w-screen h-screen bg-clouds bg-cover">
  <div class="bg-transparent text-center">
    <h1 class="text-6xl text-white lg:mt-6 p-2"><%= cityName %></h1>
  </div>
  <div
    class="relative items-center text-gray-600 self-center w-screen h-full grid grid-cols-1 grid-rows-3 gap-6 py-2 lg:grid-cols-3 lg:grid-rows-1 lg:justify-center lg:h-full"
  >
    <div
      class="lg:grid lg:justify-center flex rounded-lg bg-gray-200 bg-thermometer bg-cover bg-no-repeat bg-center text-center mx-8 h-full mt-4 row-span-1 lg:h-2/3"
    >
      <div class="h-full w-1/3 justify-center flex flex-col lg:w-full">
        <p class="card-text">Current Temp</p>
        <p class="card-text"><%=temp%>°C</p>
      </div>
      <div class="h-full w-1/3 justify-center flex flex-col lg:w-full">
        <p class="card-text">Feels Like</p>
        <p class="card-text"><%=feelsLike%>°C</p>
      </div>
      <div class="h-full w-1/3 justify-center flex flex-col lg:w-full">
        <p class="card-text">Humidity</p>
        <p class="card-text"><%=humidity%>%</p>
      </div>
    </div>

    
    <div class="rounded-lg bg-<%=weatherBg%> bg-cover bg-no-repeat bg-center text-center mx-8 row-span-1 h-full lg:h-2/3 lg:px-4">
      <div class="card-div">
        <p class="card-text">The current weather conditions are:</p>
        <p class="card-text"><%=weatherDescription%></p>
      </div>
      <div class="card-div">
        <p class="card-text">Visibility</p>
        <p class="card-text"><%=visibility%> metres</p>
      </div>
      </div>

    <div
      class=" rounded-lg bg-wind-sock bg-cover bg-no-repeat bg-top text-center mx-8 h-full mb-4 row-span-1 lg:h-2/3">
    <div class="card-div">
      <p class="card-text">Wind Speed</p>
      <p class="card-text"><%=windSpeed%>m/s</p>
    </div>
    <div class="card-div">
      <p class="card-text">Wind Direction</p>
      <p class="card-text"><%=windDirection%>°</p>
    </div>
    </div>

  </div>
</div>
<%- include("partials/footer"); -%>
